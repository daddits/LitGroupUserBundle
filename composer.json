{
    "name": "litgroup/user-bundle",
    "description": "Symfony2 bundle for common user management purposes.",
    "keywords": ["User management"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Shamritskiy",
            "email": "roman@litgroup.ru"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/framework-bundle": "~2.3",
        "symfony/security-bundle":  "~2.3"
    },
    "require-dev": {
        "doctrine/orm":             "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2"
    },
    "autoload": {
        "psr-0": {
            "LitGroup\\Bundle\\UserBundle": ""
        }
    },
    "target-dir": "LitGroup/Bundle/UserBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }

}